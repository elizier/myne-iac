  name        = "server"
  description = "Allow Postgres from peering VPC"

  vpc_id = data.terraform_remote_state.vpc_id

  # ingress {
  #   from_port   = 80
  #   to_port     = 80
  #   protocol    = "tcp"
  #   cidr_blocks = ["0.0.0.0/0"]
